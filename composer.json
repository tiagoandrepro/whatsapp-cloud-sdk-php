{
  "name": "tiagoandrepro/whatsapp-cloud-sdk-php",
  "description": "Production-grade PHP 8.4 SDK for Meta WhatsApp Cloud API with strict typing, PSR compliance, and comprehensive security features",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "whatsapp",
    "whatsapp-cloud-api",
    "whatsapp-business",
    "meta",
    "facebook",
    "messaging",
    "api-client",
    "psr-18",
    "php8"
  ],
  "homepage": "https://github.com/tiagoandrepro/whatsapp-cloud-sdk-php",
  "support": {
    "issues": "https://github.com/tiagoandrepro/whatsapp-cloud-sdk-php/issues",
    "source": "https://github.com/tiagoandrepro/whatsapp-cloud-sdk-php",
    "docs": "https://github.com/tiagoandrepro/whatsapp-cloud-sdk-php#readme"
  },
  "authors": [
    {
      "name": "Tiago Andre",
      "email": "contato@tiagoandrepro.com.br",
      "homepage": "https://tiagoandrepro.com.br"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-json": "*",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^2.0",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "nyholm/psr7": "^1.8",
    "php-http/mock-client": "^1.6",
    "phpstan/phpstan": "^1.11",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Tiagoandrepro\\WhatsAppCloud\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tiagoandrepro\\WhatsAppCloud\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "cs:check": "php vendor/bin/php-cs-fixer fix --dry-run --diff --allow-risky=yes",
    "cs:fix": "php vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "stan": "php vendor/bin/phpstan analyse",
    "test": "php vendor/bin/phpunit"
  }
}
